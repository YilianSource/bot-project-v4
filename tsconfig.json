{
    "compilerOptions": {
        "target": "es2017",
        "checkJs": true,
        "outDir": "./build",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
